<?xml version="1.0" encoding="UTF-8"?>
<addon id="plugin.video.bbtv" version="1.1" name="BBTV Video Plugin" provider-name="sbalazs">
<requires>
  <import addon="xbmc.python" version="2.24.0"/>
</requires>
<extension point="xbmc.python.pluginsource" library="main.py">
  <provides>video</provides>
</extension>
<extension point="xbmc.addon.metadata">
  <summary lang="en">BBTV Video Plugin</summary>
  <description lang="en">Plugin to play bodybuilding videos from the hungarian website http://bbtv.hu.</description>
  <disclaimer lang="en">Videos are provided by www.bbtv.hu.</disclaimer>
  <assets>
    <icon>icon.png</icon>
    <fanart>fanart.jpg</fanart>
    <screenshot>resources\screenshot-01.jpg</screenshot>
    <screenshot>resources\screenshot-02.jpg</screenshot>
    <screenshot>resources\screenshot-03.jpg</screenshot> 
  </assets>
</extension>
</addon>
